<%= form_for(@projectbundle) do |f| %>
  <% if @projectbundle.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@projectbundle.errors.count, "virhe", "virhettä") %> esti projektinipun tallentamisen:</h2>

      <ul>
      <% @projectbundle.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name ,'Projektiryhmän nimi'%><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description, 'Kuvaus' %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :signup_start, 'Ilmoittautuminen alkaa'%>
    <br>
    <%= f.date_select :signup_start %>
  </div>
  <div class="field">
    <%= f.label :signup_end, 'Ilmoittautuminen päättyy' %>
    <br>
    <%= f.date_select :signup_end %>
  </div>
  <div class="field">
    <%= f.label :active ,'Aktiivinen'%><br>
    <%= f.check_box :active %>
  </div>

  <div class="actions">
    <%= f.submit 'Tallenna projektiryhmä' %>
  </div>

<% end %>
