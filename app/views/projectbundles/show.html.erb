<p class="notice"><%= notice %></p>
<p class="alert"><%= alert%></p>

<p>
  <strong>Nimi:</strong>
  <%= @projectbundle.name %>
</p>

<p>
  <strong>Kuvaus:</strong>
  <%= @projectbundle.description %>
</p>

<p>
  <strong>Aktiivinen:</strong>
  <% if @projectbundle.active? and not @projectbundle.active.nil?%>
    <td>Kyllä</td>
<% else %>
    <td>Ei</td>
<% end %>
</p>

<p>
  <strong>Ilmottautumisen alkamispäivä:</strong>
  <%= @projectbundle.signup_start.to_formatted_s(:laurea_way) %>
</p>

<p>
  <strong>Ilmottautumisen päättymispäivä:</strong>
  <%= @projectbundle.signup_end.to_formatted_s(:laurea_way) %>
</p>

<%= link_to 'Muokkaa', edit_projectbundle_path(@projectbundle) %> |
<%= link_to 'Listaa kaikki projektiryhmät', projectbundles_path %>
<% content_for :header do %>
    <%= "Projektiryhmän tiedot" %>
<% end %>
