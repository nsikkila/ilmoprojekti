<div class="content">
<div class="header"><h1>Käyttäjät</h1></div>

<div class="subdiv">
<table>
  <thead>
    <tr>
      <th>Käyttäjänimi</th>
      <th>Nimi</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to "#{user.username}", user %></td>
        <td><%= user.firstname %> <%= user.lastname %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
<%= link_to 'New User', new_user_path %>
</div>