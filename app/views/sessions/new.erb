<%= form_tag sessions_path do %>
    <table>
      <tr>
        <td>Käyttäjätunnus:</td>
        <td><%= text_field_tag :username, params[:username] %></td>
      </tr>
      <tr>
        <td>Salasana:</td>
        <td><%= password_field_tag :password, params[:password] %></td>
      </tr>
      <tr>
        <td></td>
        <td><%= submit_tag "Kirjaudu sisään" %></td>
      </tr>
    </table>
<% end %>

<% content_for :header do %>
    Kirjaudu sisään
<% end %>